// Define o gerador do Prisma Client, que usaremos para fazer queries no nosso código.
generator client {
  provider = "prisma-client-js"
}

// Configura a fonte de dados.
datasource db {
  provider = "postgresql" // Informa que estamos usando PostgreSQL.
  url      = env("DATABASE_URL") // Pede para ele pegar a URL de conexão do arquivo .env.
}

// Nosso primeiro modelo de dados. Isso será transformado na tabela "User" no banco.
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}